---
const { title, image, description, slug } = Astro.props;
---

<!-- src/components/Card.astro -->
<div
  class="flex items-center gap-4 bg-gray-900 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-4 max-w-3xl"
>
  <div class="flex-shrink-0 overflow-hidden rounded-lg w-16 h-16">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
    />
  </div>

  <div class="flex-1">
    <h2
      class="text-3xl font-bold text-white hover:text-blue-400 transition-colors duration-300"
    >
      {title}
    </h2>
    <p class="text-gray-400 text-xl line-clamp-2">
      {description}
    </p>
  </div>

  <div class="flex-shrink-0">
    <a
      href={`/docs/${slug}`}
      class="inline-block px-4 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition duration-300 shadow hover:shadow-md whitespace-nowrap"
    >
      ðŸ“– Ver Docs
    </a>
  </div>
</div>
